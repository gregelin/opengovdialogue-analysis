  <tr id="row_4070" onmouseover="showDiv('CommentBar_4070');" onmouseout="hideDiv('CommentBar_4070')" class="IdeaScale_Comment_Normal">
    <td valign="top" style="padding:3px;">

    <table width="100%" cellpadding="0" cellspacing="0">
